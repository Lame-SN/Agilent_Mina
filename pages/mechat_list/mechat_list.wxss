/* pages/mechat_list/mechat_list.wxss */
page{
  background: #fff;
}
.mc_poster_bg{
  width: 100%;
}

.btn-meiqia{
  height:80rpx;
  color:#0085d5;
  background:#F1F3F4;
  padding:20rpx;
  font-size:32rpx;
  display:inline-block;
  vertical-align: middle;
  line-height: 40rpx;
}

.mechat_list_panel{
  padding: 15px;
}

.mechat_title{
  margin-bottom: 20rpx;
}
.mechat_list{
  box-sizing: border-box;
  flex-wrap: wrap;
}

.mechat_row{
  padding: 20rpx 0;
  box-sizing: border-box;
}

.mechat_row_body{
  font-size: 24rpx;
}

.mechat_row_blue{
  background: #0087D2;
}

.mechat_row_orange{
  background: #802764;
}

.mechat_row_green{
  background: #86BC02;
}

.mechat_row_yellow{
  background: #F3A901;
}

.mechat_offline_time{
  background:#838690;
}
.mechat_row_btn{
  width: 130rpx;
  height: 130rpx;
  text-align: center;
  border-radius: 50%;
  justify-content: center;
  margin-bottom: 15rpx;
}
.mechat_row_btn image{
  width: 70%;
}
