@keyframes horse  
{  
    0%   {left:250rpx;top:0px;}  
    66%  {left:-2250rpx;top:0px;}  
    66.5%{left:2250rpx;top:600rpx;}
    67%  {left:2250rpx;top:0px;}  
    100% {left:250rpx;top:0px;}  
}
.h_alert_con {
    /*width: 100%;*/
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    animation:horse 26s linear 0s infinite;
}
.example{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  background: rgba(000, 000, 000, .4);
  bottom: 0;
  left: 0;
  position: absolute;
}

