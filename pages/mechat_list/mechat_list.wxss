page{
  background: #fff;
}
.mc_poster_bg{
  width: 100%;
}

.btn-meiqia{
  height:80rpx;
  color:#0085d5;
  background:#F1F3F4;
  padding:20rpx;
  font-size:32rpx;
  display:inline-block;
  vertical-align: middle;
  line-height: 40rpx;
}

.mechat_list_panel{
  padding: 10rpx 15px;
}

.mechat_title{
  margin-bottom: 10rpx;
}
.mechat_list{
  box-sizing: border-box;
  flex-wrap: wrap;
}

.mechat_row{
  padding: 11rpx 0;
  box-sizing: border-box;
}

.mechat_row_body{
  font-size: 24rpx;
}

.mechat_row_blue{
  background: #00A9E0;
}

.mechat_row_purple{
  background: #802764;
}

.mechat_row_green{
  background: #6fd100;
}
.mechat_row_tree{
  background: #009400;
}

.mechat_row_yellow{
  background: #F3A901;
}
.mechat_row_orange{
  background: #E67600;
}

/* .mechat_offline_time{
