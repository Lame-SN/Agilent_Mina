.mechat_row_btn{
  width: 125rpx;
  height: 125rpx;
  text-align: center;
  border-radius: 50%;
  justify-content: center;
  margin-bottom: 5rpx;
}
.mechat_row_btn image{
  width: 70%;
  height: 70%;
}


.mechat_head_img{
  position: relative;
}
