<!--pages/confirm_info/confirm_info.wxml-->

<view class="pd_form" id="pd_form">
    <view class="pd_cell flex">
        <view class="pd_cells_title ">产品及用户信息</view>
        <view class="pd_camera flex justify-end">
            <image src="/images/camera.png"></image>
            <view class="fc-blue" data-url="../install/install" bindtap="clickToNext">重新拍照</view>
        </view>
    </view>
    <view class="pd_con bg-primary">
        <view class="pd_cell">
            <view class="pd_cell__hd ">
                <label class="pd_label fc-aaa">产 品 ID:</label>
            </view>
            <view class="weui-cell__hd">{{info.ID}}</view>
        </view>

        <view class="pd_cell">
            <view class="pd_cell__hd ">
                <label class="pd_label fc-aaa">产品描述:</label>
            </view>
            <view class="weui-cell__hd ">{{info.desc}}</view>
        </view>
        <view class="pd_cell">
            <view class="weui-cell__hd ">
                <label class="pd_label fc-aaa">序 列 号:</label>
            </view>
            <view class="weui-cell__hd ">{{info.seriNo}}</view>
        </view>

        <view class="pd_cell">
            <view class="weui-cell__hd ">
                <label class="pd_label fc-aaa">姓 名:</label>
            </view>
            <view class="weui-cell__hd ">{{info.name}}</view>
        </view>

        <view class="pd_cell">
            <view class="weui-cell__hd ">
                <label class="pd_label fc-aaa">单位名称:</label>
            </view>
            <view class="weui-cell__hd ">{{info.company}}</view>
        </view>

        <view class="pd_cell">
            <view class="weui-cell__hd ">
                <label class="pd_label fc-aaa">客户等级:</label>
            </view>
            <view class="weui-cell__hd ">{{info.grade}}</view>
        </view>
    </view>
    <view class="pd_btn padding">
        <button class="btn btn-primary" href="javascript:" id="confirm" onclick="_MEIQIA('showPanel')">确定并开始咨询</button>
    </view>
    <view class="pd_wechat padding text-center">
        信息不正确？您可以<a class="pd_wechat_btn fc-blue" onclick="_MEIQIA('showPanel')"><image src="../../images/wechat_b.png"></image>发起会话</a>
    </view>
</view>