.shLoadingWithImg .shLoading-btn-ok{
  width:100%;
  color:#4e4e4e;
}

.shLoadingWithImg .shp_body{
  padding-top:0;
}

.shLoadingWithImg .shLoading-close{
  position: absolute;
  height:60rpx;
  width:60rpx;
  border:1rpx solid #8c8c8c;
  right:-25rpx;
  line-height: 60rpx;
  border-radius: 50%;
  color:#8c8c8c;
  top:-25rpx;
  background: #fff;
}

.shLoadingWithImg .shLoading-panel{
  padding-top:0;
}

.shLoadingWithImg .shLoading-title{
  background: #0085d5;
  position: relative;
  width:100%;
  text-align: center;
  color:#fff;
  height:80rpx;
  line-height:80rpx;
  font-size:32rpx;
}

.shLoadingWithImg .shLoading-view-img{
  width:100%;
}

.shLoadingWithImg .shLoading-view-img image{
  width:100%;
  height:30rpx;
}

.shLoadingWithImg .shLoading-panel{
  top:220rpx;
}

.shLoadingWithImg .shp_title{
  font-size:28rpx;
  text-align:center;
  color:#000;
  padding:20rpx 25rpx;
}

.shLoadingWithImg .shpb_important{
  display: inline-block;
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
  margin-right:10rpx;
  position: relative;
}

.shLoadingWithImg .shpb_important image{
  width:100%;
  vertical-align: middle;
  position: absolute;
  top:0;
  left:0;
}

.shLoadingWithImg .shpbb_text{
  font-size:24rpx;
  display: inline-block;
  vertical-align: middle;
  color:#8c8c8c;
}

.shLoadingWithImg .shpb_a{
  color:#0085d5;
  font-size:22rpx;
  text-decoration:underline;
}
