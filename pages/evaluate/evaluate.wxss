 /* pages/evaluate/evaluate.wxss */
.e_star{ width: 40rpx; height: 40rpx; }
.stars{ margin: 0 10rpx; }
.aver_e_star{ width: 30rpx; height: 30rpx; }
.aver_stars{ margin: 0 5rpx; }
.ev_grade {
    width: 100%;
    padding: 20px;
    background: #f0f4f6;
}

.ev_grade_avatar {
    width: 120rpx;
}

.ev_grade_avatar image {
    width: 100rpx;
    height: 100rpx;
}

.ev_grade_info {
    flex: 1;
}

.ev_grade_info h4 {
    line-height: 40px;
}

.iconfont-active {
    color: #ff961a;
}

.iconfont-half::after {
    content: "\e657";
    display: inline-block;
    width: 0.5rem;
    overflow: hidden;
    color: #ff961a;
    position: absolute;
    top: -5px;
    right: 8px;
}

.iconfont {
    position: relative;
}

.ev_com_grade {
    text-align: center;
    padding: 20px 0;
    border-bottom: 1px solid #e7e6e7
}

.ev_com_grade i {
    margin-right: 10px;
}

.ev_com_grade .iconfont {
    font-size: 2rem;
}

.ev_grade_item {
    padding: 10px;
}

.ev_grade_item>div {
    padding: 5px 0;
    align-self: center;
}

.ev_grade_item_title {
    flex: .3;
}

.ev_grade_item_grade {
    flex: .5;
}

.ev_grade_item_grade .iconfont {
    font-size: 1.3rem;
}

.ev_grade_item_num {
    flex: .2;
}

.s-textarea{ width: 100%; height: 160rpx; margin-top: 20rpx; }
.s-repair{ margin-top: 30rpx; border: 1px solid #e6e7e6; width: 100%; height: 320rpx; }
.evaluate-item{ padding: 20rpx 0 ; }
.e-title{ flex: .3; }
.e-stars{ flex: .6; }
.e-count{ flex: .1; }
