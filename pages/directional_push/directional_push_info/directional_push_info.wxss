.container{
    display: flex;
    background-color: #FFFFFF;
    padding: 0;
    flex-direction: column;
    justify-content: normal;
}
.top_bg_view{
    margin-bottom: 40rpx;
    margin-top: 20rpx;
}

.allbox{
    width: 90%;
}
.allbox .box{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border: 1rpx solid #fff;
    border-radius: 24rpx;
    padding: 40rpx 20rpx 40rpx 40rpx;
    margin-bottom: 30rpx;
    height: 132rpx;
    box-shadow: 0 0 20rpx #ddd;
}

.box-left{
    height: 44rpx;
}
.box-left text{
    vertical-align: middle;
}

.box-left .info{
    width: 50rpx;
    height: 34rpx;
    margin-right: 40rpx;
    vertical-align: middle;
}
.right{
    width: 44rpx;
    height: 44rpx;
    margin-top: 6rpx;
}
