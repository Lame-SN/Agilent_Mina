<!--pages/fill_info/fill_info.wxml-->
<!-- remind -->
<view class="padding">
    <text class="fs12 fc-red ">温馨提示：您的手机在系统里还没有建档。请填写以下资料，我们会尽快为您建档。</text>
</view>
<form bindsubmit="submitConfirm" class="fillinfo_form" id="fillinfo_form">
    <!-- service-infomation -->
    <view class="s-list flex directionC">
        <view class="s-item flex alignc">
            <view class="item-t fc-g fs14">姓名：</view>
            <input class="fs14 item-r userNam" type="text" placeholder="请输入姓名" bindinput="getname" bindblur='setname'/>
        </view>
        <view class="s-item flex alignc">
            <view class="item-t fc-g fs14">手机号：</view>
            <view class="item-r s-phone fs14">{{mobile}}</view>
        </view>
        <view class="s-item flex alignc">
            <view class="item-t fc-g fs14">单位名称：</view>
            <input type="text" class="item-r fs14 companyNam" placeholder="请输入单位名称" bindinput='getcompany' bindblur='setcompany'/>
        </view>
        <view class="s-item flex alignc">
            <view class="item-t fc-g fs14">序列号：</view>
            <input type="text" class="item-r fs14 serialNo" placeholder="例：RS-PRO-SE3948478" bindinput='getsn' bindblur='setsn'/>
        </view>
        <view class="s-item flex alignc">
            <view class="item-t fc-g fs14">备注：</view>
            <input type="text" class="item-r fs14 serialNo" placeholder="添加备注（可选）" bindblur='setother'/>
        </view>
    </view>
    <!-- btn -->
    <button class="btn btn-primary"  formType="submit" disabled="{{nameV && companyV && snV? false:true}}">确定</button>
</form>