/* pages/leave_message/leave_message.wxss */
.lm_remind > view { line-height: 50rpx;}
.s-list{ padding: 0 40rpx 40rpx; background: #fff; }
.s-item{ border-bottom: 1px solid #dfdfdf; padding: 0rpx 8rpx; }
.s-item:last-child{ border: none; }
.item-t{ flex: .3; height: 100rpx; line-height: 100rpx; }
.s-item input{ height: 100rpx; }
.item-r{ flex: .7; }
.s-textarea{ width: 100%; height: 160rpx; margin-top: 20rpx; }
.s-repair{ margin-top: 30rpx; border: 1px solid #e6e7e6; width: 100%; height: 320rpx; }
.s-upload-item{ width: 150rpx; height: 150rpx; border: 1px solid #e6e7e6; position: relative;  margin-right: 10rpx;}
.s-upload-img{ width: 150rpx; height: 150rpx; border: 1px solid #e6e7e6; margin-right: 15rpx; position: relative;}
.lm_photobtn{ position: absolute; width: 80rpx; height: 80rpx; top:50%; left:50%; margin-top:-40rpx; margin-left: -40rpx; }
.lm_img_delete {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    background: #000;
    opacity: .4;
    position: absolute;
    bottom: 0;
    left: 0;
    color: #fff;
    text-align: center;
    font-size: 0.75rem;
}