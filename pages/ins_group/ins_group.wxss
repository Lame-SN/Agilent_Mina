
/* no_group */
.ng{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #fff;
  top: 0;
  left: 0;
  z-index: 999;
  padding: 0 50rpx;
}
.ng_img{
  width: 340rpx;
  height: 260rpx;
  margin: 150rpx auto 50rpx;
}
.ng_title{
  margin-bottom: 50rpx;
}



/* group_list */
.gl_title{ 
  padding: 20rpx 30rpx;
 }
.gl_title text{
  margin-left: 15rpx;
}
.gl{
  padding: 35rpx 30rpx;
  background: #fff;
}
.gl:not(:last-child){
  border-bottom: 1px solid #e7e7e7;
}
.g_item{
  flex: .5;
}
.g_image{
  width: 38rpx;
  height: 38rpx;
  margin-left: 10rpx;
}


.g_del{
  width: 45rpx;
  height: 45rpx;
  line-height: 50rpx;
  text-align: center;
  background: #ff3b32;
  border-radius: 50%;
  margin-left: 60rpx;
}
.edit_image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}






/* add_group */
.mi_add_new {
    padding: 20rpx;
    width: 100%;
    line-height: 50rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1000;
    border-top: 1px solid #eaeaea;
}

.mi_add_new image {
    width: 37rpx;
    height: 37rpx;
    vertical-align: sub;
    margin-right: 10rpx;
}
.add_group{
  width: 100%;
  padding: 30rpx 0;
  margin: 30rpx 0;
}
.add_image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.add_input{
  padding:10rpx 0;
  border-bottom: 1px solid #e7e7e7;
  margin: 50rpx 0;
  width: 450rpx;
  text-align: center;
}
