page{
  background: #fff;
}
.slide-image{
  width: 100%;
}

.h_alert_img image{ width: 30rpx; height: 30rpx; }
.h_service_item { 
  display: block; 
  width: 100%; 
  text-align: center; 
  padding: 0.9rem 20px;
}

.h_icon {
    padding: 0 10px;
    flex-wrap: wrap;
    box-sizing: border-box;
}

.icon_item{
  background: #0085d5;
  margin: 0 5px 20rpx;
  border-radius: 10rpx;
}

.h_service_item image {
    width: 90rpx;
    height: 110rpx;
}

.h_alert {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 99;
    width: 100%;
}

.h_alert_bg {
    background: #000;
    opacity: .3;
    height: 50px;
    width: 100%;
}

.h_alert_img {
    width: 10%;
    padding: 0 15px;
    height: 50px;
    line-height: 50px;
    margin-right: 5px;
}

.h_alert_img img {
    width: 16px;
    margin-top: 15px;
}

.h_alert_con {
    /*width: 100%;*/
    height: 50px;
    line-height: 50px;
    position: absolute;
    animation:horse 15s linear 0s infinite;
}




.wrapper{  
    width:90%;  
    height:50px;
    line-height: 50px;    
    position: relative;  
    overflow: hidden;  
} 
@keyframes horse  
{  
    0%   {left:250rpx;top:0px;}  
    66%  {left:-750rpx;top:0px;}  
    66.5%{left:750rpx;top:600rpx;}
    67%  {left:750rpx;top:0px;}  
    100% {left:250rpx;top:0px;}  
}


.recent_service{
  padding: 40rpx 30rpx 20rpx;
}
.rs_content{
  padding: 30rpx 0 40rpx;
}
.rs_left{
  position: relative;
}
.rs_time{
  position: absolute;
  right: -34rpx;
  top: 36rpx;
}

.rs_sno{
  margin-bottom: 10rpx;
  word-break: break-all;
}
.rs_text{
  height: 50rpx;
  line-height: 50rpx;
}
.rs_l{
  flex: .9
}
.rs_r{
  flex: .1
