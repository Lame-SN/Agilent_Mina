<!-- 近期服务更新 -->
<view class='recent_service'>
  <!-- title -->
  <view class='fsrpx32'>最新服务更新</view>
  <!-- content -->
  <view class='rs_content flex alignc' bindtap='gotoSH'>
    <view class='rs_l'>
      <!-- Service -->
      <view wx:if='{{ServiceRequestId!=""}}' class='flex alignc rs_left'>
        <!-- statusImg -->
        <view class='rs_img flex alignc'>
          <image src='/images/{{HeaderStatus}}.png'></image>
        </view>
        <!-- content -->
        <view class='flex directionC rs_con'>
          <view class='rs_sno fsrpx24'>咨询单号：{{ServiceRequestId}}</view>
          <view class='rs_text'>
            <image style='width: 26rpx; margin-right: 10rpx;' src='/images/rs_status.png' mode='widthFix'></image>
            <text  class='fc-777 fsrpx24'>{{Title}}</text>
          </view>
        </view>
        <view class='fs12 rs_time fc-grey'>{{CreateTime}}</view>
      </view>
      <!-- no_Service -->
      <view wx:else class='fsrpx28 fc-grey'>尚无任何服务更新消息</view>
    </view>
    <view class='rs_r text-right'>
      <image src='/images/arrow-r.png' mode='widthFix'></image>
    </view>
  </view>
</view>




<!-- 图标链接 -->
<view class="h_icon flex">
  <!-- 常见问题 -->
  <view class="wxform icon_item blue_gradient" style='width:{{iconWidth1}}px' bindtap='gotoSS' >
    <button plain="true" class="formbtn h_service_item" form-type="submit" data-info="self_service" data-click="nevigateToNext" data-url="../self_service/self_service">
      <image src="/images/self.png"></image>
      <view class="fs12 fc-fff">常见问题</view>  
    </button>  
  </view>
  <!-- 我要报修 -->
    <form class="wxform icon_item orange_gradient" bindsubmit="formSubmit" report-submit="true" style='width:{{iconWidth2}}px' >
    <meiqiaCheckWork data-info="serial_number"  showType="clickPanel" bindclickevent="clickToRepair" needBind="true">
      <button plain="true"  class="formbtn h_service_item service_repair" form-type="submit">
        <image src="/images/repair.png"></image>
        <view class="fs12 fc-fff">我要报修</view>  
      </button>  
    </meiqiaCheckWork>
  </form>
  
  <!-- 服务预约 -->
   <form class="wxform icon_item green_gradient" bindsubmit="formSubmit" report-submit="true" style='width:{{iconWidth3}}px'  >
    <button plain="true" class="formbtn h_service_item" form-type="submit" data-info="serviceOrder" data-click="nevigateToNext" data-url="../serviceOrder/serviceOrder">
      <image src="/images/install.png"></image>
      <view class="fs12 fc-fff">服务预约</view>  
    </button>  
  </form>
  <!-- elearning -->
  <view class="wxform icon_item purple_gradient" style='width:{{iconWidth4}}px' bindtap='skipHtml5Page' >
    <button plain="true" class="formbtn h_service_item" form-type="submit" data-info="elearning" data-click="skipHtml5Page">
      <image src="/images/myclass.png"></image>
      <view class="fs12 fc-fff">培训中心</view>  
    </button>  
  </view>
</view>
