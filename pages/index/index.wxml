
<!--index.wxml-->
<swiper indicator-dots="{{indicatorDots}}" indicator-active-color="{{indicatorActiveColor}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="width: 100%; height: 408rpx;" circular="{{true}}">
  <block wx:for="{{imgUrls}}" wx:key="{{img}}" wx:for-index='index'>
    <swiper-item bindtap='gotoPoster' data-type='url' data-url='{{item.skipUrl}}'>
      <image src="{{item.url}}" class="slide-image" mode='widthFix'></image>
      <view class='swiper_text'>{{item.text}}</view>
    </swiper-item>
  </block>
</swiper>

