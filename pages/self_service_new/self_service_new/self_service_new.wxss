.allbox{
    width: 90%;
}
.allbox .box{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border: 1rpx solid #fff;
    border-radius: 24rpx;
    padding: 6% 5%;
    margin-bottom: 30rpx;
    height: 132rpx;
    box-shadow: 0 0 20rpx #ddd;
}
.info{
    width: 10rpx;
    height: 46rpx;
    vertical-align: middle;
    margin-right: 40rpx;
    border-radius: 64rpx;
}


.box-left{
    display: flex;
    height: 44rpx;
}
.box-left text{
    vertical-align: middle;
}

.right{
    width: 20rpx;
    height: 34rpx;
    margin-top: 6rpx;
}
