/* ====================service_list====================== */
page{
  margin-bottom: -30rpx;
}

.on{
    border-bottom: 4rpx solid #0F70CB;
    color: #0f70cb;
}
.marginb-9{
    margin-bottom: 18rpx;
}
.marginb-6{
    margin-bottom: 12rpx;
}
.faq_mask {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 900;
}

.sl_dropdown image{
    width: 28rpx;
    height:14rpx;
    margin-left:40rpx;
    margin-bottom: 5rpx;
}
.sl_tab {
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid #e7e6e7;
    box-sizing: content-box;
}

.sl_tab_item {
    width: 50%;
    height: 100rpx;
    background: #fff;
    line-height: 100rpx;
    text-align: center;
}

.sl_tab_filtering::before {
    content: "";
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.3;
    position: fixed;
}

.sl_tab_item_active {
    border-bottom: 4rpx solid #0F70CB;
    color: #0f70cb;
}

.sl_filter {
    width: 100%;
    height: 100rpx;
    padding: 10px 0;
    box-sizing: border-box;
    border-bottom: 2rpx solid #e7e6e7;
    position: relative;
}

.sl_filter_con>div {
    width: 100%;
}

.sl_filter_con {
    position: absolute;
    z-index: 1001;
    width: 100%;
    margin-top: 10px;
}

.sl_filter_options {
    width: 100%;
    padding: 20rpx;
    height: 240rpx;
    border-bottom: 2rpx solid #e7e6e7;
    box-sizing: border-box;
}

.sl_filter_options_item {
    width: 30%;
    height: 80rpx;
    background: #e6e6e6;
    border-radius: 10rpx;
    float: left;
    margin: 10rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 0.81rem;
}

.sl_filter_active {
    background: #e0eff9;
    color: #0085d5;
    position: relative;
}



.sl_tab_con {
    position: relative;
}

.sl_tab_con_item {
    width: 100%;
    padding: 0 20rpx;
    display: none;
    box-sizing: border-box;
}

.sl_tab_con_state {
    width:16rpx;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    border-top-left-radius: 6rpx;
    border-bottom-left-radius: 6rpx;
    z-index: 2;
}

.sl_filter_img {
    width: 30rpx;
    vertical-align: middle;
    margin-left: 10rpx;
}

.sl_list_item {
    width: 100%;
    box-sizing: border-box;
    margin-top: 20rpx;
    position: relative;
}

.sl_list_item_up {
    width: 100%;
    border-bottom: 2rpx solid #eaeaea;
    padding: 20rpx;
    padding-left: 40rpx;
}

.sl_list_item_down {
    width: 100%;
    padding: 20rpx;
    padding-left: 40rpx;
}

.sl_list_item_left {
    flex: .7;
}

.sl_list_item_info h4,
.sl_list_item_info p {
    line-height: 60rpx;
}

.sl_list_item_right {
    flex: .3;
    text-align: right;
}

.sl_chat_btn {
    width: 100%;
    height: 76rpx;
    margin-right: 0;
    border-radius: 12rpx;
    text-align: center;
    background: #0084d6; 
    color: #fff;
    line-height: 76rpx;
}

.sl_pdf {
    margin-top: 24rpx;
}

.sl_pdf image {
    width: 30rpx;
    height: 25.9rpx;
    margin-right: 6rpx;
}

.sl_notifi {
    height: 60rpx;
    line-height: 70rpx;
}
.faq_select {
    position: absolute;
    right: -28rpx;
    border: 2rpx solid #aaa;
    border-radius: 12rpx;
    z-index: 999;
    text-align: center;
    
}
.faq_select view {
    height: 80rpx;
    line-height: 80rpx;
    min-width: 600rpx;
    list-style: none;
}

.faq_select > view:not(:last-child) {
    border-bottom: 2rpx solid #e7e7e7;
}

.faq_select > view:nth-child(2n) {
    background: #eaeaea;
}

.faq_select > view:nth-child(2n-1) {
    background: #fff;
}
.faq_select > view:first-child{
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}
.faq_select > view:last-child{
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}