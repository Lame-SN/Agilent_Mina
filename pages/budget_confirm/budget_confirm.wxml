<!--pages/budget_confirm/budget_confirm.wxml-->
<block wx:if="{{!pageComplete}}">
  <view>{{info}}</view>
</block>


<block wx:if="{{pageComplete}}">
<view class="budget_confirm padding">
    <view class="bc_title fs20 text-center">预算确认</view>
    <view class="bc_remind">您的问题需要现场工程师的支持，当前报价已经生成，BQ编号为：<span>{{bqId}}</span>，请确保您已知晓并接受，
        以便我们安排工程师为您服务。</view>
    <view class="bc_order fc-blue" bindtap='openPDF'>
        <image class="bc_order_icon" src="/images/pdf.png"></image> 
        安捷伦维修收费标准说明书-报价单
    </view>
</view>

<view class="bq_status_panel">
  <block wx:if="{{approval_button_enable=='Y'}}">
      <block wx:if="{{isConfirm==0}}">
            <view class="bq_checkbox_panel">
              <checkbox-group bindchange="contractConfirm">
                <checkbox value="contract" checked="{{checkBox}}"/>我已阅读并接受此报价单
              </checkbox-group>
            </view>
             <button class="btn btn-primary" id="confirm" bindtap='confirm' >确认并接受</button>
      </block>
      <block wx:else>
          <button class="btn btn-primary" disabled="disabled" >您已确认</button>
      </block>
  </block>
  <block wx:else>
      <block wx:if="{{item_description=='pts'}}">
        <block wx:if="{{isConfirm==0}}">
            <view class="bq_checkbox_panel">
              单独备件支持的报价单暂不支持在线接受，请联系客服确认
            </view>
        </block>
        <block wx:else>
            <button class="btn btn-primary" disabled="disabled" >您已确认</button>
        </block>
      </block>
       <block wx:else>
          <block wx:if="{{isConfirm==0}}">
            <block wx:if="{{price>=maxprice}}">
              <view class="bq_checkbox_panel">
                预算报价大于3万元，请联系客服以确认
              </view>
            </block>
            <block wx:else>
                <view class="bq_checkbox_panel">
                  此类型服务暂不接受在线确认报价
                </view>
            </block>
          </block>
          <block wx:else>
            <button class="btn btn-primary" disabled="disabled" >您已确认</button>
          </block>
      </block>
  </block>
</view>




<view class="bc_chat padding text-center">如果对报价有任何问题，请<image class="chatimg" src="/images/wechat_b.png"></image>
   <button class="fc-blue bc_chat_btn btn-meiqia" open-type='{{isWork?"contact":""}}' session-from='W_bqobjectid:{{bqId}}' bindtap='MtaReport'>
    发起会话</button>
</view>
</block>
 

 