/* pages/myhome/myhome.wxss */
page{
  background: #fff;
}

.mh_info{
  padding: 30rpx 40rpx;
}
.mc_avatar {
  margin-left: 30rpx; 
  flex: .3;
}
.mc_info{
  flex: .5;
}
.mc_info_img{
  width: 25rpx;
  vertical-align: middle;
}
.mc_edit{
  flex: .2;
}
.mc_edit image{
  width: 15rpx;
}
.mc_info_mobile{
  margin-left: 10rpx;
}
.mc_avatar_con{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 2rpx solid #dededf;
}
.mc_avatar_con image{
  width: 100%;
  border-radius: 50%;
}

.mh_func{
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}
.mh_fbtn:first-child{
  border-right: 1px solid #dddddd;
}
.mh_fbtn{
  flex: .5;
}
.mh_fbtn image{
  width: 24rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.mc_unavatar{
  padding: 40rpx;
}
.mc_unavatar_img{
  width: 150rpx;
}
.mc_id_btn{
  width: 240rpx;
  padding: 14rpx;
  border: 1px solid #d6d6d6;
  text-align: center;
  border-radius: 15rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.mc_id_btn_text{
  margin-top: 10rpx;
}
.mc_id_btn_img{
  width: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}


.mc_service_list{
  padding: 0 40rpx;
}
.mc_items {
    padding: 20rpx 30rpx;
    background: #fafafa;
    box-sizing: border-box;
    width: 100%;
    box-shadow: 5rpx 5rpx 15rpx  #e9e9e9;
    margin-bottom: 30rpx;
    position: relative;
}
.newServiceHistory{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 46rpx;
  right: 70rpx;
  background: #ff0000;
  border-radius: 50%;
  z-index: 999;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  font-size: 0.6rem;
}

.mc_icon {
  flex: .2;
}
.mc_icon_con{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  justify-content: center;
}
.mc_icon_con image{
  width: 68%;
  height: 68%;
  vertical-align: middle;
}
.mc_con {
    flex: .7;
}

.mc_arrow {
    flex: .1;
    line-height: 1;
}
.mc_arrow image{
  width: 15rpx;
}

.mc_con_title{
    margin-bottom: 10rpx;
}