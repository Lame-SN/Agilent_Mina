/* components/meiqia/meiqiaShowText/meiqiaShowText.wxss */

.flex{
	display:flex;
  flex-direction:row;
  justify-content: flex-start;
}

.h_alert_img image{ width: 30rpx; height: 30rpx; }
.h_service_item { 
  display: block; 
  width: 100%; 
  text-align: center; 
  padding: 0.9rem 20px;
}

.h_icon {
    padding: 0 10px;
    flex-wrap: wrap;
    box-sizing: border-box;
}

.icon_item{
  /*background: #0085d5;*/
  margin: 0 5px 20rpx;
  border-radius: 10rpx;
}

.h_service_item image {
    width: 110rpx;
    height: 110rpx;
}

.h_alert {
    position: relative;
    bottom: 0;
    left: 0;
    z-index: 99;
    width: 100%;
}

.h_alert_bg {
    /* background: #fff;
    opacity: .3; */
    background-color: rgba(0, 0, 0, 0.03);
    height: 77rpx;
    width: 100%;
    border-bottom: 1rpx solid #ccc;
}

.h_alert_img {
    width: 10%;
    padding: 0 15px;
    height: 50px;
    line-height: 40px;
    margin-right: 5px;
    margin-top:6rpx;
}

.h_alert_img img {
    width: 16px;
    margin-top: 10px;
}

.h_alert_con {
    /*width: 100%;*/
    height: 50px;
    line-height: 40px;
    position: absolute;
    animation:horse 15s linear 0s infinite;
}




.wrapper{  
    width:720rpx;  
    height:50px;
    line-height: 50px;    
    position: relative;  
    overflow: hidden;  
} 
@keyframes horse  
{  
    0%   {left:250rpx;top:0px;}  
    66%  {left:-1100rpx;top:0px;}  
    66.5%{left:1100rpx;top:600rpx;}
    67%  {left:1100rpx;top:0px;}  
    100% {left:250rpx;top:0px;}  
}