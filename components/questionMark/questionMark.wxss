 .mechat_row_desc{
  display:inline-block;
  width:35rpx;
  position:relative;
  vertical-align: middle;
  line-height:28rpx;
  z-index: 2;
}
.mechat_question_icon image{
  width:100%;
  display: inline-block;
  vertical-align: middle;
}
.mechat_position_top{
  position: absolute;
  bottom:40rpx;
  left:-10rpx;
  opacity:0.8;
  width:320rpx;
}
.mechat_question_text{
  font-size:20rpx;
  padding:20rpx 40rpx;
  display:inline-block;
  background: #000;
  color:#fff;
  border-radius: 10rpx;
}
.mechat_triangle_down{
  width: 0; 
  height: 0; 
  border-left: 10rpx solid transparent; 
  border-right: 10rpx solid transparent; 
  border-top: 10rpx solid #000;
  margin-left:19rpx;
}